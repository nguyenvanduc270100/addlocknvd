<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="1" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="2" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="3" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="4" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="5" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="6" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="7" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="8" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="9" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.LinearLayoutCompat android:gravity="center">

                <com.bienlongtuan.applocker.layouts.PinInputKeyboardKeyButton
                    android:id="@+id/btnKey0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pin_input_button_text="0" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBtnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="@string/delete"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>