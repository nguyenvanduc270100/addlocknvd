<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_tab_home">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_title_app">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_normal</item>
    </style>

    <style name="text_describe_app">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/color_text_describe</item>
    </style>

    <style name="text_title_name_app">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_tablayout_text_appearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="rounded_corner">
        <item name="android:topLeftRadius">20dp</item>
        <item name="android:topRightRadius">20dp</item>
    </style>

    <style name="text_toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:color">@color/white</item>
        <item name="android:fontFamily">@font/sans_regular</item>
    </style>
</resources>